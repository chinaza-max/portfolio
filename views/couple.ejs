<body id="body">
    <nav id="nav__single">
        <a href="/#home"><i class="fa fa-arrow-left"></i></a>
    </nav>
    
    <div class="container md mt-5">
        <div class="row" style="padding-top: 30px;">
            <div class="col-2"><img src="../static/logo.jpeg" class="img-thumbnail" alt="Cinque Terre" width="180" height="110"></div>
            <div class="col-6 pt-5"><h1>breakthrough Credit Repair</h1></div>
        </div>
    </div>
    <div class="container  md mt-5">
        <form autocomplete="off">
            <div class="row">
                <div class="col border">
                    <h3 style="width: 100% ; text-align: center;font-size:40px;">husband</h3>

                        <input id="firstname" class="form-control" type="text" placeholder="First name" required/>
                        <input id="lastname" class="form-control"  type="text" placeholder="Last name" required/>
                        <input id="email" class="form-control" type="email" placeholder="Enter Email" required/>
                        <input id="tel" class="form-control" type="tel" placeholder="Phone" required/>
                        <input id="address" class="form-control"  type="text" placeholder="Home Address" required/>
                        <input id="state" class="form-control" type="text" placeholder="Enter State" required/>
                        <input id="city" class="form-control"  type="text" placeholder="City" required/>

                </div>
                <div class="col  border">
                    <h3 style="width: 100% ; text-align: center; font-size:40px;">wife</h3>

                        <input id="state2" class="form-control" type="text" placeholder="Enter State" required/>
                        <input id="city2" class="form-control" type="text" placeholder="City" required/>
                </div>
            </div>
            <div id="submit"><input type="submit"></div>
        </form>
    </div>

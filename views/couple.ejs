    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
      $('form').on('submit',(e)=>{
                e.preventDefault();

                const firstname=$("#firstname").val().trim();
                const lastname=$("#lastname").val().trim();
                const email=$("#email").val().trim();
                const tel=$("#tel").val().trim();
                const address=$("#address").val().trim();
                const state=$("#state").val().trim();
                const city=$("#city").val().trim();
                const firstname2=$("#firstname2").val().trim();
                const lastname2=$("#lastname2").val().trim();
                const email2=$("#email2").val().trim();
                const tel2=$("#tel2").val().trim();
                const address2=$("#address2").val().trim();
                const state2=$("#state2").val().trim();
                const city2=$("#city2").val().trim();
                
                const data={
                     firstname,
                     lastname,
                     email,
                     tel,
                     address,
                     state,
                     city,
                     firstname2,
                     lastname2,
                     email2,
                     tel2,
                     address2,
                     state2,
                     city2,
                };
                console.log(data)
                $.post('/email2',data,()=>{
                    swal("Submitted", "You would be contacted for further processing", "success");
                });
                $("#firstname").val('')
